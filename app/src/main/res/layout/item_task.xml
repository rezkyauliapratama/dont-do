<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <FrameLayout
        android:id="@+id/cardview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin_small"
        android:background="@drawable/layerlist_round_dash">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <android.support.v4.widget.Space
                android:layout_width="@dimen/margin_small"
                android:layout_height="wrap_content" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:padding="@dimen/margin_large">



                <com.app.infideap.stylishwidget.view.ATextView
                    android:id="@+id/text_01"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorBlack_1000"
                    android:textStyle="bold"
                    android:text="@string/empty"
                    android:textAppearance="@style/TextStyle.Large"/>

                <android.support.v4.widget.Space
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/margin_xsmall" />
                <com.app.infideap.stylishwidget.view.ATextView
                    android:id="@+id/text_02"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textStyle="italic"
                    android:text="@string/empty"
                    android:textAppearance="@style/TextStyle.Medium"/>


            </LinearLayout>

            <android.support.v4.widget.Space
                android:layout_width="@dimen/margin_small"
                android:layout_height="wrap_content" />
            <FrameLayout
                android:id="@+id/layout_image"
                android:layout_width="56dp"
                android:layout_height="match_parent"
                android:background="@color/colorPrimaryDark"
                android:paddingLeft="@dimen/margin_large"
                android:paddingRight="@dimen/margin_large"
                >
                <com.airbnb.lottie.LottieAnimationView
                    android:id="@+id/lottieView"
                    android:layout_width="@dimen/size_image_36dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:adjustViewBounds="true"
                    android:scaleType="centerCrop"
                    app:lottie_fileName="animation/thumbsdown_white.json"
                    app:lottie_loop="false"
                    app:lottie_progress="1"
                    app:lottie_scale="1" />

            </FrameLayout>


        </LinearLayout>

    </FrameLayout>

</layout>
